.flex-container
  display flex
  flex-flow row
  justify-content center
  align-items stretch

.flex-box
  margin 1rem
  padding .5rem
  background-color lighten($kudoBlueColor, 98%)
  border-color $borderColor
  border-style dashed
  border-width 1px
  border-radius 8px
  font-weight lighter
  flex-grow 1
  flex-basis 30%
  line-height 1.7em
  &.centered
    text-align center
  b
    color $kudoEggplantLightColor
  img
    display block
    margin-left auto
    margin-right auto

@media (max-width: $MQMobile)
  .flex-container
    flex-direction column
    align-items center
  .flex-box
    max-width 100%
    padding 0 2.5rem
